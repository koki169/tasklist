<h3> タスク一覧　</h3>

<%= link_to '新規タスクの作成', new_task_path, class: "btn btn-primary" %>

<% if @tasks.any? %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th width="170px">タスク</th>
				<th>詳細</th>
			</tr>
		</thead>
		<tbody>
			<% @tasks.each do |task| %>
				<tr>
					<td><%= link_to task.title, task %></td>
					<td><%= task.content %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div>
		<%= paginate @tasks %>
	</div>
<% end %>
